<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.klubFikom.DetailKlubFikomActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="410dp"
            android:layout_height="150dp"
            android:src="@drawable/bg_detail_organisasi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/logobem"
            android:layout_width="97dp"
            android:layout_height="91dp"
            android:src="@drawable/logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="@+id/imageView3" />

        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="53dp"
            android:layout_height="56dp"
            android:background="@android:color/transparent"
            android:elevation="8dp"
            android:src="@drawable/back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tv_title_detail_klub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center_vertical"
            android:text="Nama Klub"
            android:textSize="17dp"
            app:layout_constraintEnd_toEndOf="@+id/logobem"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="@+id/logobem"
            app:layout_constraintTop_toBottomOf="@+id/logobem" />

        <TextView
            android:id="@+id/fak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Fakultas "
            android:textSize="14dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/tv_title_detail_klub"
            app:layout_constraintStart_toStartOf="@+id/tv_title_detail_klub"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_detail_klub" />

        <ImageView
            android:id="@+id/img_welcome"
            android:layout_width="432dp"
            android:layout_height="278dp"
            android:src="@drawable/nomor3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.523"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@+id/img_welcome">

            <TextView
                android:id="@+id/tv_title_profil"
                android:layout_width="80dp"
                android:layout_height="31dp"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                style="@style/textColorTitleHome"
                android:text="Profil"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_detail_profil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                style="@style/textColorTitleOrganizer"
                />

            <TextView
                android:id="@+id/tv_profil1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                style="@style/textColorTitleOrganizer" />

            <TextView
                android:id="@+id/tv_profil2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/textColorTitleOrganizer"
                />

            <TextView
                android:id="@+id/tv_profil3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                style="@style/textColorTitleOrganizer" />

            <TextView
                android:id="@+id/tv_profil4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                style="@style/textColorTitleOrganizer" />

            <TextView
                android:id="@+id/tv_profil5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                style="@style/textColorTitleOrganizer" />

            <TextView
                android:id="@+id/tv_ajakan_profil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textSize="16sp"
                style="@style/textColorTitleOrganizer" />

            <TextView
                android:id="@+id/tv_title_visiMisi"
                android:layout_width="150dp"
                android:layout_height="31dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="24dp"
                style="@style/textColorTitleHome"
                android:gravity="center_vertical"
                android:text="Visi dan Misi"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_title_visi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="150dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Visi"
                android:textColor="@color/red_200"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_detail_visi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/textColorTitleOrganizer" />

            <TextView
                android:id="@+id/tv_title_misi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="150dp"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Misi"
                android:textColor="@color/red_200"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_detail_misi1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/textColorTitleOrganizer"
                />

            <TextView
                android:id="@+id/tv_detail_misi2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/textColorTitleOrganizer" />

            <TextView
                android:id="@+id/tv_detail_misi3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/textColorTitleOrganizer" />

            <TextView
                android:id="@+id/tv_detail_misi4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/textColorTitleOrganizer"
                />

            <TextView
                android:id="@+id/tv_detail_misi5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/textColorTitleOrganizer" />

            <TextView
                android:id="@+id/tv_title_struktur"
                android:layout_width="250dp"
                android:layout_height="31dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="24dp"
                style="@style/textColorTitleHome"
                android:gravity="center_vertical"
                android:text="Struktural"
                android:textSize="20dp" />


<!--            <ImageView-->
<!--                android:id="@+id/img_struktural_bem"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="match_parent"-->
<!--                android:src="@drawable/strukturbem"-->
<!--                />-->

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>