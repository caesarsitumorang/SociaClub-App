<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.voting.VotingFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_sicfo"
            android:layout_width="58dp"
            android:layout_height="65dp"
            android:src="@drawable/logo"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.045"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title_sicfo"
            style="@style/textColorTitleHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="SociaClub - FIK"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/img_sicfo"
            app:layout_constraintStart_toEndOf="@+id/img_sicfo"
            app:layout_constraintTop_toTopOf="@+id/img_sicfo"
            app:layout_constraintVertical_bias="0.306" />

        <TextView
            android:id="@+id/tv_title_sicfo1"
            style="@style/textColorTitleHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Organizer"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/img_sicfo"
            app:layout_constraintEnd_toEndOf="@+id/tv_title_sicfo"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tv_title_sicfo"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_sicfo"
            app:layout_constraintVertical_bias="0.0" />

        <View
            android:id="@+id/view_title"
            android:layout_width="0dp"
            android:layout_height="51dp"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/border_rectangle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_sicfo"
            app:layout_constraintVertical_bias="0.036" />

        <TextView
            android:id="@+id/textView3"
            style="@style/textColorTitleHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pemilihan Umum"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/view_title"
            app:layout_constraintEnd_toEndOf="@+id/view_title"
            app:layout_constraintStart_toStartOf="@+id/view_title"
            app:layout_constraintTop_toTopOf="@+id/view_title" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_voting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_title" />

        <View
            android:id="@+id/view_pendaftaran"
            android:layout_width="0dp"
            android:layout_height="51dp"
            android:layout_marginTop="212dp"
            android:background="@drawable/border_rectangle"
            app:layout_constraintEnd_toEndOf="@+id/view_title"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/view_title"
            app:layout_constraintTop_toBottomOf="@+id/view_title" />

        <TextView
            android:id="@+id/tv_title_pendaftaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pendaftaran Anggota"
            android:textSize="20sp"
            style="@style/textColorTitleHome"
            app:layout_constraintBottom_toBottomOf="@+id/view_pendaftaran"
            app:layout_constraintEnd_toEndOf="@+id/view_pendaftaran"
            app:layout_constraintStart_toStartOf="@+id/view_pendaftaran"
            app:layout_constraintTop_toTopOf="@+id/view_pendaftaran" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_pendaftaran"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="@+id/rv_voting"
            app:layout_constraintHorizontal_bias="0.395"
            app:layout_constraintStart_toStartOf="@+id/rv_voting"
            app:layout_constraintTop_toBottomOf="@+id/view_pendaftaran" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
